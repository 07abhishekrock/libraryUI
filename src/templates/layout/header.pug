      script(src="/scripts/common.js" , defer="true")
  body 
    include ./toast.pug
    nav.navbar-expand-lg.navbar-light.bg-light
      div.collapse.navbar-collapse.d-flex.justify-content-between
        div.navbar-nav
          a.navbar-brand Library Client Interface
          a.nav-link.disabled Home
          a.nav-link.disabled Status
          a.nav-link.disabled Records
          a.nav-link.disabled Library
        if !isLoginPage && !user
          a.btn.btn-outline-primary Login
        if user
          a.btn.btn-outline-primary Logout
    include ./alert.pug

